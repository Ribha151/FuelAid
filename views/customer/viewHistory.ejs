	<link href="https://fonts.googleapis.com/css?family=Dosis:200,300,400,500,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Overpass:300,400,400i,600,700" rel="stylesheet">
    <link rel="icon" type="image/png" href="/assets/images/FUEL AID_logo.png">

    <link rel="stylesheet" href="/assets/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/animate.css">
    
    <link rel="stylesheet" href="/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/assets/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="/assets/css/magnific-popup.css">

    <link rel="stylesheet" href="/assets/css/aos.css">

    <link rel="stylesheet" href="/assets/css/ionicons.min.css">

    <link rel="stylesheet" href="/assets/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="/assets/css/jquery.timepicker.css">

    <link rel="stylesheet" href="/assets/css/font-awesome.min.css">
    
    <link rel="stylesheet" href="/assets/css/flaticon.css">
    <link rel="stylesheet" href="/assets/css/icomoon.css">
	<link rel="stylesheet" href="/assets/css/style.css">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="stylesheet" href="/assets/css/sidebar.css">
	<!-- <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" /> -->
	<!-- <link rel="stylesheet" href="/assets/css/sidebar.css"> -->
	<title> <%= typeof title != 'undefined' ? title : "Service History" %> </title>
</head>

<body>
	<%- include('../partials/header') %>
	<%- include('../partials/alerts') %>

<style>
   header{
		background-color: #403d3d!important;
	}
   header .navbar, .bg-dark, .navbar-dark, .navbar-light {
	background-color: #403d3d!important;
      background-image: none !important;
      box-shadow: none !important;
   }
   .text-orange{
	 color: #fc983c !important;
   }
   .logo-container img {
    height: 0.9em;
    width: auto;
}
</style>
<main>
	<%- include('../partials/customerSidebar') %>
    <div id="main-wrapper">
		
		<div class="bg-white shadow-sm p-3">
			<br>
			<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
			<h5 class="m-0 color-theme d-inline-block">Service History</h5>
		</div>
        <div class="m-4">
        <% if (services.length === 0) { %>
            <div class="alert alert-info text-center">No paid services found.</div>
          <% } %>
        
          <div class="row">
            <% services.forEach((service, index) => { %>
                <% if (service.status == 'completed') { %>
              <div class="col-md-6 mb-4">
                <div class="card p-3 shadow-sm">
                  <h5>Service Type: <%= service.serviceCategory %></h5>
                  <p><strong>Sub Services:</strong> <%= service.subServices.join(', ') %></p>
                  <p><strong>Date of request:</strong> <%= new Date(service.createdAt).toLocaleString() %></p>
                  <p><strong>Date of service:</strong> <%= new Date(service.completedAt).toLocaleString() %></p>
                  <p><strong>Status:</strong> <%= service.status %></p>
                  <% if (service.mechanic) { %>
                  <p><strong>Mechanic:</strong> <%= service.mechanic.firstName %> <%= service.mechanic.lastName %></p>
                  <% } %>
                  <% if (service.fueldeliveryboy) { %>
                    <p><strong>Fuel Delivery Boy:</strong> <%= service.fueldeliveryboy.firstName %> <%= service.fueldeliveryboy.lastName %></p>
                    <% } %>
                  <p><strong>Fee Paid:</strong> â‚¹<%= service.baseAmount %></p>
        
                  <form action="/customer/receipt/<%= service._id %>" method="GET">
                    <button class="btn btn-primary">Download PDF Receipt</button>
                  </form>
                </div>
              </div>
              <% } %>
            <% }) %>
          </div>
        </div>
    </div>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="/assets/js/script.js"></script>
	
</body>
</html>