</head>

<body>
	<%- include('../partials/header') %>

<style>
    header{
		background-color: #403d3d!important;
	}
   header .navbar, .bg-dark, .navbar-dark, .navbar-light {
	background-color: #403d3d!important;
      background-image: none !important;
      box-shadow: none !important;
   }
   #main-wrapper{
	overflow-y: scroll;  
    overflow-x: scroll;
}

#main-wrapper::-webkit-scrollbar {
  display: none;                  /* For Chrome, Safari, Edge */
}
.butn{
  background-color: #e69500 !important;
      color: white;
      border: none;
      border-radius: 5px;
      width:100%;
}
.butn:hover {
      background: #f1c999;
    }
	.logo-container img {
    height: 0.9em;
    width: auto;
}
   </style>
<main>
    <%- include('../partials/alerts') %>
    <%- include('../partials/adminSidebar') %>
	<div id="main-wrapper">
		<br>
		<div class="bg-white shadow-sm p-3">
			<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
			<h5 class="m-0 color-theme d-inline-block">Verify Users</h5>
		</div>
		
		<div class="col col-sm-10 col-12 m-auto my-4" style="max-height: 75%; overflow: auto;">
			<table class="table table-info table-striped table-hover m-0 bg-white">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Name</th>
						<th scope="col">Aadhaar Card No.</th>
                        <th scope="col">Driving License No.</th>
                        <th scope="col">Email</th>
                        <th scope="col">Address</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Role</th>
						<th scope="col">Actions</th>
                        
					</tr>
				</thead>
				<tbody>
                    <% for(let i=0; i<pendingUsers.length; i++) { %>
                        <% if(pendingUsers[i].role != "admin") { %>
                        <tr>
                            <th scope="row"> <%= i+1 %> </th>
                            <td><%= pendingUsers[i].firstName %> <%= pendingUsers[i].lastName %></td>
                            <td><%= pendingUsers[i].acn %></td>
                            <td><%= pendingUsers[i].dl %></td>
                            <td><%= pendingUsers[i].email %></td>
                            <td><%= pendingUsers[i].address %></td>
                            <td><%= pendingUsers[i].phone %></td>
                            <td><%= pendingUsers[i].role %></td>
                            <td>
                                <form action="/admin/verify-users/approve/<%= pendingUsers[i]._id %>" method="POST" style="display:inline;">
                                    <input type="hidden" name="type" value="<%= pendingUsers[i].role %>">
                                    <button type="submit">Approve</button>
                                </form>
                                <form action="/admin/verify-users/reject/<%= pendingUsers[i]._id %>" method="POST" style="display:inline;">
                                    <input type="hidden" name="type" value="<%= pendingUsers[i].role %>">
                                    <button type="submit">Reject</button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                    <% } %>
                </tbody>
			</table>
		</div>
		
	</div>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	<script src="/assets/js/script.js"></script>
    
</body>
</html>